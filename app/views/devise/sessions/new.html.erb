<h2>Entrar</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name),html: {class: "form-group d-flex flex-column gap-3 align-items-center"}) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "Email", class:'form-control' %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password",placeholder: "Senha", class:'form-control' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field form-check">
      <%= f.check_box :remember_me, class: 'form-check-input' %>
      <%= f.label "Lembrar de mim", class: 'form-check-label' %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Entrar", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
